extends layout

block content
  h1= title
  a(class="button", href="/books/new") Create New Book 
  include searchField
  table 
    thead 
      tr 
        th Title 
        th Author 
        th Genre 
        th Year 
    tbody 
      each book in books
        tr
          td 
            a(href="/books/"+ book.id) #{book.title} 
          td #{book.author}
          td #{book.genre}
          td #{book.year}
  if(hasNext)           
    a(class='button', href='/books/page/'+ nextPage) Next Page
  if(lastPage > 2)  
    a(class='button', href='/books/page/'+ lastPage) Previous Page
  else if (hasPrev)
    a(class='button', href='/books') Previous Page   
  