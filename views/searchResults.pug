include layout 
block content 
    h1= title
    if(books)
        table 
            thead 
            tr 
                th Title 
                th Author 
                th Genre 
                th Year 
            tbody 
            each book in books
                tr
                td 
                    a(href="/books/"+ book.id) #{book.title} 
                td #{book.author}
                td #{book.genre}
                td #{book.year}
    else 
        p Your search returned no matches, try again!
    p
       a(class='button', href="/") Back                    